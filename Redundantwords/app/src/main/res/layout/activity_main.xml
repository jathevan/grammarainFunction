<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jathevan.redundantwords.MainActivity">

    <EditText
        android:id="@+id/sentenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Sentence"
        android:inputType="text|textLongMessage|textPersonName"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="95dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/findButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="266dp"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/sentenceText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>